@model LoginDto;

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
		}

<div class="container">
	<section>
		<div class="container-fluid h-custom">
			<div class="row d-flex justify-content-center align-items-center h-100">

				<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 bg-light shadow-sm  p-3 rounded">
					<form method="Post" asp-controller="Auth" asp-action="Login">
						<h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">LogIn</h3>
						@if (ViewBag.Error!= null){
						<div class="form-outline mb-4">
							<label class="form-label text-danger">@ViewBag.Error</label>

							</div>
						}
						<div class="form-outline mb-4">
							<label class="form-label">Email</label>
							<input type="email" asp-for="@Model.Email" class="form-control form-control-lg" placeholder="Enter a valid Email">
							<span asp-validation-for="@Model.Email" class="text-danger"></span>
						</div>

						<div class="form-outline mb-3">
							<label class="form-label">Password</label>
							<input type="password" asp-for="@Model.Password" placeholder="Enter password" class="form-control form-control-lg">
							<span asp-validation-for="@Model.Password" class="text-danger"></span>
						</div>

						<div class="text-center mt-4 pt-2">
							<button type="submit" class="btn btn-dark btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">
								Login
							</button>
							<p class="small fw-bold mt-2 pt-1 mb-0" style="font-size: 16px">
								Don't have an account?
								<a asp-controller="Auth" asp-action="SignUp" style="color:#1A76D1">Sign Up</a>
							</p>
						</div>


					</form>
				</div>
			</div>
		</div>
	</section>

</div>